{%- style -%}
  #shopify-section-{{ section.id }} .collection-grid {
    padding: clamp(3rem, 8vw, 6rem) 0;
    background: #fff;
  }

  #shopify-section-{{ section.id }} .collection-grid__inner {
    display: grid;
    gap: clamp(2rem, 5vw, 3.5rem);
  }

  #shopify-section-{{ section.id }} .collection-grid__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    gap: clamp(2rem, 4vw, 3rem);
  }

  #shopify-section-{{ section.id }} .collection-card {
    display: flex;
    flex-direction: column;
    gap: 1.4rem;
    background: #fff;
    border-radius: 24px;
    overflow: hidden;
    box-shadow: 0 18px 38px rgba(0, 0, 0, 0.08);
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  #shopify-section-{{ section.id }} .collection-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 24px 46px rgba(0, 0, 0, 0.12);
  }

  #shopify-section-{{ section.id }} .collection-card__media {
    position: relative;
    aspect-ratio: 4/5;
    background: linear-gradient(135deg, rgba(255, 102, 0, 0.08) 0%, rgba(255, 133, 51, 0.12) 100%);
    display: block;
  }

  #shopify-section-{{ section.id }} .collection-card__media img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  #shopify-section-{{ section.id }} .collection-card__body {
    display: grid;
    gap: 0.8rem;
    padding: 1.8rem;
  }

  #shopify-section-{{ section.id }} .collection-card__title {
    margin: 0;
    font-size: 1.9rem;
    font-weight: 700;
    color: #1f1f1f;
  }

  #shopify-section-{{ section.id }} .collection-card__vendor {
    font-size: 1.3rem;
    color: rgba(31, 31, 31, 0.6);
    text-transform: uppercase;
    letter-spacing: 0.08em;
  }

  #shopify-section-{{ section.id }} .collection-card__price {
    display: flex;
    align-items: center;
    gap: 0.8rem;
    font-weight: 700;
    color: #ff6600;
    font-size: 1.7rem;
  }

  #shopify-section-{{ section.id }} .collection-card__compare {
    color: rgba(31, 31, 31, 0.45);
    text-decoration: line-through;
    font-weight: 500;
    font-size: 1.4rem;
  }

  #shopify-section-{{ section.id }} .collection-card__actions {
    margin-top: 0.5rem;
    display: grid;
    gap: 0.8rem;
  }

  #shopify-section-{{ section.id }} .collection-card__link,
  #shopify-section-{{ section.id }} .collection-card__button {
    display: inline-flex;
    justify-content: center;
    align-items: center;
    padding: 0.9rem 1.4rem;
    border-radius: 999px;
    font-weight: 700;
    text-decoration: none;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  #shopify-section-{{ section.id }} .collection-card__link {
    background: rgba(255, 102, 0, 0.1);
    color: #ff6600;
  }

  #shopify-section-{{ section.id }} .collection-card__link:hover {
    transform: translateY(-2px);
    box-shadow: 0 12px 24px rgba(255, 102, 0, 0.16);
  }

  #shopify-section-{{ section.id }} .collection-card__button {
    background: linear-gradient(135deg, #ff6600 0%, #ff8533 100%);
    color: #fff;
    border: 0;
    cursor: pointer;
    box-shadow: 0 18px 36px rgba(255, 102, 0, 0.28);
  }

  #shopify-section-{{ section.id }} .collection-card__button[disabled] {
    opacity: 0.6;
    cursor: not-allowed;
    box-shadow: none;
  }

  #shopify-section-{{ section.id }} .collection-grid__empty {
    text-align: center;
    padding: 4rem;
    border-radius: 20px;
    background: rgba(255, 102, 0, 0.08);
    color: #4a2800;
    font-weight: 600;
  }

  #shopify-section-{{ section.id }} .collection-grid__pagination {
    display: flex;
    justify-content: center;
    gap: 0.8rem;
    flex-wrap: wrap;
  }

  #shopify-section-{{ section.id }} .collection-grid__pagination a,
  #shopify-section-{{ section.id }} .collection-grid__pagination span {
    min-width: 36px;
    height: 36px;
    display: grid;
    place-items: center;
    border-radius: 50%;
    background: rgba(255, 102, 0, 0.12);
    color: #ff6600;
    font-weight: 600;
    text-decoration: none;
  }

  #shopify-section-{{ section.id }} .collection-grid__pagination .is-active {
    background: linear-gradient(135deg, #ff6600 0%, #ff8533 100%);
    color: #fff;
  }
{%- endstyle -%}

<section class="collection-grid">
  <div class="collection-grid__inner page-width">
    {%- paginate collection.products by section.settings.products_per_page -%}
      {% if collection.products_count > 0 %}
        <div class="collection-grid__grid">
          {% for product in collection.products %}
            {% liquid
              assign primary_variant = product.selected_or_first_available_variant
              assign has_single_variant = product.has_only_default_variant
              assign can_quick_add = has_single_variant and primary_variant.available
              assign image_alt = product.featured_image.alt | default: product.title
            %}
            <article class="collection-card">
              <a class="collection-card__media" href="{{ product.url }}">
                {% if product.featured_image %}
                  {{ product.featured_image | image_url: width: 600 | image_tag: alt: image_alt, loading: 'lazy', decoding: 'async' }}
                {% else %}
                  {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
                {% endif %}
              </a>
              <div class="collection-card__body">
                {% if product.vendor and section.settings.show_vendor %}
                  <span class="collection-card__vendor">{{ product.vendor }}</span>
                {% endif %}
                <h3 class="collection-card__title">
                  <a href="{{ product.url }}" style="color:inherit;text-decoration:none;">{{ product.title }}</a>
                </h3>
                <div class="collection-card__price">
                  <span>{{ primary_variant.price | money }}</span>
                  {% if primary_variant.compare_at_price > primary_variant.price %}
                    <span class="collection-card__compare">{{ primary_variant.compare_at_price | money }}</span>
                  {% endif %}
                </div>
                <div class="collection-card__actions">
                  <a class="collection-card__link" href="{{ product.url }}">{{ section.settings.view_label }}</a>
                  {% if can_quick_add %}
                    <button
                      class="collection-card__button"
                      data-add-to-cart
                      data-variant-id="{{ primary_variant.id }}"
                      data-qty="1"
                    >
                      {{ section.settings.add_label }}
                    </button>
                  {% endif %}
                </div>
              </div>
            </article>
          {% endfor %}
        </div>
      {% else %}
        <div class="collection-grid__empty">{{ section.settings.empty_state }}</div>
      {% endif %}

      {% if paginate.pages > 1 %}
        <nav class="collection-grid__pagination" role="navigation" aria-label="Collection pagination">
          {% if paginate.previous %}
            <a href="{{ paginate.previous.url }}">‹</a>
          {% endif %}
          {% for part in paginate.parts %}
            {% if part.is_link %}
              <a href="{{ part.url }}">{{ part.title }}</a>
            {% elsif part.title == paginate.current_page %}
              <span class="is-active">{{ part.title }}</span>
            {% else %}
              <span>{{ part.title }}</span>
            {% endif %}
          {% endfor %}
          {% if paginate.next %}
            <a href="{{ paginate.next.url }}">›</a>
          {% endif %}
        </nav>
      {% endif %}
    {%- endpaginate -%}
  </div>
</section>

{% schema %}
{
  "name": "Collection product grid",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "range",
      "id": "products_per_page",
      "min": 4,
      "max": 48,
      "step": 4,
      "default": 24,
      "label": "Products per page"
    },
    {
      "type": "checkbox",
      "id": "show_vendor",
      "label": "Show vendor",
      "default": false
    },
    {
      "type": "text",
      "id": "view_label",
      "label": "View button label",
      "default": "View product"
    },
    {
      "type": "text",
      "id": "add_label",
      "label": "Quick add label",
      "default": "Quick add"
    },
    {
      "type": "text",
      "id": "empty_state",
      "label": "Empty state message",
      "default": "More products are steeping. Check back soon!"
    }
  ],
  "presets": [
    {
      "name": "Collection product grid"
    }
  ]
}
{% endschema %}
