{% liquid
  assign hero_image = section.settings.hero_image
  assign logo_image = section.settings.logo_image
  assign button_link = section.settings.button_link | default: 'tel:(239) 955-0314'
  assign button_label = section.settings.button_label | default: 'Call (239) 955-0314'
  assign hero_alt = section.settings.hero_image_alt | default: section.settings.heading | default: shop.name
  assign logo_alt = section.settings.logo_alt_text | default: shop.name
%}

{%- style -%}
  #shopify-section-{{ section.id }} .home-hero {
    padding: clamp(3rem, 8vw, 7rem) 0;
    background: linear-gradient(180deg, rgba(255, 102, 0, 0.04) 0%, rgba(255, 133, 51, 0.08) 100%);
  }

  #shopify-section-{{ section.id }} .home-hero__inner {
    display: grid;
    gap: clamp(2rem, 6vw, 4rem);
    justify-items: center;
    text-align: center;
  }

  #shopify-section-{{ section.id }} .home-hero__media {
    position: relative;
    max-width: min(90vw, 960px);
    width: 100%;
    border-radius: 24px;
    overflow: hidden;
    box-shadow: 0 22px 45px rgba(0, 0, 0, 0.14);
  }

  #shopify-section-{{ section.id }} .home-hero__media img {
    display: block;
    width: 100%;
    height: auto;
  }

  #shopify-section-{{ section.id }} .home-hero__badge {
    position: absolute;
    inset: auto auto 16px 16px;
    border-radius: 999px;
    background: rgba(255, 255, 255, 0.88);
    padding: 0.75rem 1.5rem;
    font-weight: 700;
    color: #ff6600;
    letter-spacing: 0.04em;
    text-transform: uppercase;
  }

  #shopify-section-{{ section.id }} .home-hero__logo {
    position: absolute;
    inset: 50% auto auto 50%;
    transform: translate(-50%, -50%);
    width: clamp(120px, 18vw, 200px);
    height: clamp(120px, 18vw, 200px);
    border-radius: 50%;
    overflow: hidden;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.18);
    background: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  #shopify-section-{{ section.id }} .home-hero__heading {
    font-size: clamp(2.4rem, 5vw, 4.8rem);
    font-weight: 800;
    color: #1f1f1f;
    margin: 0;
  }

  #shopify-section-{{ section.id }} .home-hero__subheading {
    font-size: clamp(1.8rem, 3vw, 2.4rem);
    color: #ff6600;
    font-weight: 700;
    margin: 0;
  }

  #shopify-section-{{ section.id }} .home-hero__description {
    max-width: 640px;
    color: rgba(20, 23, 26, 0.78);
    margin: 0;
    font-size: 1.7rem;
    line-height: 1.6;
  }

  #shopify-section-{{ section.id }} .home-hero__cta {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    margin-top: 1.5rem;
    padding: 1.1rem 2.8rem;
    border-radius: 999px;
    background: linear-gradient(135deg, #ff6600 0%, #ff8533 100%);
    color: #fff;
    font-weight: 700;
    font-size: 1.8rem;
    text-decoration: none;
    box-shadow: 0 18px 36px rgba(255, 102, 0, 0.35);
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  #shopify-section-{{ section.id }} .home-hero__cta:hover {
    transform: translateY(-3px);
    box-shadow: 0 24px 42px rgba(255, 102, 0, 0.42);
  }

  #shopify-section-{{ section.id }} .home-hero__socials {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 1.2rem;
    margin-top: clamp(2rem, 4vw, 3rem);
  }

  #shopify-section-{{ section.id }} .home-hero__social-link {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    border-radius: 50%;
    background: #fff;
    box-shadow: 0 10px 24px rgba(0, 0, 0, 0.08);
    font-size: 2.1rem;
    text-decoration: none;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  #shopify-section-{{ section.id }} .home-hero__social-link:hover {
    transform: translateY(-2px) scale(1.03);
    box-shadow: 0 14px 32px rgba(0, 0, 0, 0.12);
  }
{%- endstyle -%}

<section class="home-hero">
  <div class="home-hero__inner page-width">
    {% if hero_image %}
      <div class="home-hero__media">
        {{ hero_image | image_url: width: 1600 | image_tag: alt: hero_alt, loading: 'eager', decoding: 'async', fetchpriority: 'high' }}
        {% if section.settings.hero_badge != blank %}
          <span class="home-hero__badge">{{ section.settings.hero_badge }}</span>
        {% endif %}
        {% if logo_image %}
          <span class="home-hero__logo">
            {{ logo_image | image_url: width: 300 | image_tag: alt: logo_alt, loading: 'lazy', decoding: 'async' }}
          </span>
        {% endif %}
      </div>
    {% endif %}

    {% if section.settings.heading != blank %}
      <h1 class="home-hero__heading">{{ section.settings.heading }}</h1>
    {% endif %}

    {% if section.settings.subheading != blank %}
      <p class="home-hero__subheading">{{ section.settings.subheading }}</p>
    {% endif %}

    {% if section.settings.description != blank %}
      <p class="home-hero__description">{{ section.settings.description }}</p>
    {% endif %}

    {% if button_link != blank %}
      <a class="home-hero__cta" href="{{ button_link }}">{{ button_label }}</a>
    {% endif %}

    {% if section.blocks.size > 0 %}
      <div class="home-hero__socials" aria-label="Social links">
        {% for block in section.blocks %}
          {% if block.type == 'social_link' and block.settings.url != blank %}
            <a
              class="home-hero__social-link"
              href="{{ block.settings.url }}"
              {% if block.settings.open_in_new_tab %}target="_blank" rel="noopener"{% endif %}
              {{ block.shopify_attributes }}
            >
              {{ block.settings.label | escape }}
            </a>
          {% endif %}
        {% endfor %}
      </div>
    {% endif %}
  </div>
</section>

