{%- style -%}
  #shopify-section-{{ section.id }} .home-visit {
    padding: clamp(3.5rem, 8vw, 7rem) 0;
    background: linear-gradient(135deg, rgba(255, 102, 0, 0.08) 0%, rgba(255, 255, 255, 0.92) 100%);
  }

  #shopify-section-{{ section.id }} .home-visit__inner {
    max-width: 760px;
    margin: 0 auto;
    text-align: center;
    display: grid;
    gap: 1.8rem;
  }

  #shopify-section-{{ section.id }} .home-visit__title {
    margin: 0;
    font-size: clamp(2.4rem, 4vw, 3.6rem);
    font-weight: 800;
    color: #212121;
  }

  #shopify-section-{{ section.id }} .home-visit__subtitle {
    margin: 0;
    color: rgba(33, 33, 33, 0.72);
    font-size: 1.7rem;
    line-height: 1.6;
  }

  #shopify-section-{{ section.id }} .home-visit__meta {
    display: grid;
    gap: 0.6rem;
    margin-top: 0.5rem;
    color: #ff6600;
    font-weight: 700;
    font-size: 1.6rem;
  }

  #shopify-section-{{ section.id }} .home-visit__link {
    color: inherit;
    text-decoration: none;
  }

  #shopify-section-{{ section.id }} .home-visit__link:hover {
    text-decoration: underline;
  }
{%- endstyle -%}

<section class="home-visit">
  <div class="home-visit__inner page-width">
    {% if section.settings.title != blank %}
      <h2 class="home-visit__title">{{ section.settings.title }}</h2>
    {% endif %}

    {% if section.settings.subtitle != blank %}
      <p class="home-visit__subtitle">{{ section.settings.subtitle }}</p>
    {% endif %}

    {% liquid
      assign tel_href = section.settings.phone | replace: '(', '' | replace: ')', '' | replace: ' ', '' | replace: '-', ''
    %}

    <div class="home-visit__meta">
      {% if section.settings.address != blank %}
        <span>{{ section.settings.address }}</span>
      {% endif %}
      {% if section.settings.phone != blank %}
        <a class="home-visit__link" href="tel:{{ tel_href }}">{{ section.settings.phone }}</a>
      {% endif %}
      {% if section.settings.hours != blank %}
        <span>{{ section.settings.hours }}</span>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Home visit",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Visit our Cape Coral lounge"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Description",
      "default": "Relax in the heart of downtown with premium kava, kratom, and botanical experiences."
    },
    {
      "type": "text",
      "id": "address",
      "label": "Address",
      "default": "üìç 1520 SE 46th Ln, Unit B, Cape Coral, FL 33904"
    },
    {
      "type": "text",
      "id": "phone",
      "label": "Phone",
      "default": "‚òéÔ∏è (239) 955-0314"
    },
    {
      "type": "text",
      "id": "hours",
      "label": "Hours",
      "default": "Open daily ‚Ä¢ Late night pours"
    }
  ],
  "presets": [
