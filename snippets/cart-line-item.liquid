{%- comment -%}
  Enhanced cart line item with full customization display
{%- endcomment -%}

<div class="cart-item" 
     data-cart-item="{{ item.variant_id }}"
     data-cart-item-key="{{ item.key }}">
  
  <div class="cart-item__media">
    {%- if item.image -%}
      <img src="{{ item.image | image_url: width: 150 }}"
           alt="{{ item.image.alt | escape }}"
           width="75" 
           height="75"
           loading="lazy"
           class="cart-item__image">
    {%- else -%}
      <div class="cart-item__image cart-item__image--placeholder">
        {%- render 'icon-product' -%}
      </div>
    {%- endif -%}
  </div>
  
  <div class="cart-item__details">
    <div class="cart-item__info">
      <h3 class="cart-item__name">
        <a href="{{ item.product.url }}" class="cart-item__link">
          {{ item.product.title }}
        </a>
      </h3>
      
      {%- unless item.product.has_only_default_variant -%}
        <div class="cart-item__variant">
          {{ item.variant.title }}
        </div>
      {%- endunless -%}
      
      {%- # Display all line item properties -%}
      {%- if item.properties.size > 0 -%}
        <div class="cart-item__properties">
          <h4 class="cart-item__properties-title sr-only">Customizations</h4>
          <dl class="cart-item__properties-list">
            {%- for property in item.properties -%}
              {%- assign property_first_char = property.first | slice: 0 -%}
              {%- unless property.last == blank or property_first_char == '_' -%}
                <div class="cart-item__property">
                  <dt class="cart-item__property-name">{{ property.first }}:</dt>
                  <dd class="cart-item__property-value">
                    {%- if property.last contains '/uploads/' -%}
                      <a href="{{ property.last }}" class="cart-item__property-file" target="_blank" rel="noopener">
                        {{ property.last | split: '/' | last }}
                      </a>
                    {%- else -%}
                      {{ property.last }}
                    {%- endif -%}
                  </dd>
                </div>
              {%- endunless -%}
            {%- endfor -%}
          </dl>
        </div>
      {%- endif -%}
      
      {%- # Selling plan information -%}
      {%- if item.selling_plan_allocation -%}
        <div class="cart-item__selling-plan">
          <p class="cart-item__selling-plan-name">
            {{ item.selling_plan_allocation.selling_plan.name }}
          </p>
        </div>
      {%- endif -%}
      
      {%- # Discounts -%}
      {%- if item.line_level_discount_allocations.size > 0 -%}
        <div class="cart-item__discounts">
          {%- for discount_allocation in item.line_level_discount_allocations -%}
            <div class="cart-item__discount">
              <span class="cart-item__discount-icon" aria-hidden="true">%</span>
              {{ discount_allocation.discount_application.title }}
              (-{{ discount_allocation.amount | money }})
            </div>
          {%- endfor -%}
        </div>
      {%- endif -%}
    </div>
    
    <div class="cart-item__quantity-price">
      <div class="cart-item__quantity" data-quantity-wrapper>
        <label for="quantity-{{ item.key }}" class="sr-only">
          Quantity for {{ item.product.title | escape }}
        </label>
        
        <button type="button" 
                class="cart-item__quantity-btn cart-item__quantity-btn--minus"
                aria-label="Decrease quantity for {{ item.product.title | escape }}"
                data-quantity-change="-1"
                data-cart-item-key="{{ item.key }}"
                {% if item.quantity <= 1 %}disabled{% endif %}>
          <span aria-hidden="true">âˆ’</span>
        </button>
        
        <input type="number" 
               id="quantity-{{ item.key }}"
               class="cart-item__quantity-input"
               name="updates[]"
               value="{{ item.quantity }}"
               min="0"
               max="99"
               data-cart-item-key="{{ item.key }}"
               aria-describedby="quantity-error-{{ item.key }}">
        
        <button type="button" 
                class="cart-item__quantity-btn cart-item__quantity-btn--plus"
                aria-label="Increase quantity for {{ item.product.title | escape }}"
                data-quantity-change="1"
                data-cart-item-key="{{ item.key }}">
          <span aria-hidden="true">+</span>
        </button>
        
        <div id="quantity-error-{{ item.key }}" 
             class="cart-item__quantity-error" 
             role="alert" 
             aria-live="polite"
             hidden></div>
      </div>
      
      <div class="cart-item__price">
        <div class="cart-item__final-price">
          {{ item.final_line_price | money }}
        </div>
        
        {%- if item.original_line_price != item.final_line_price -%}
          <div class="cart-item__original-price">
            <s>{{ item.original_line_price | money }}</s>
          </div>
        {%- endif -%}
        
        {%- if item.quantity > 1 -%}
          <div class="cart-item__unit-price">
            {{ item.final_price | money }} each
          </div>
        {%- endif -%}
      </div>
    </div>
    
    <button type="button" 
            class="cart-item__remove"
            aria-label="Remove {{ item.product.title | escape }} from cart"
            data-cart-item-remove
            data-cart-item-key="{{ item.key }}">
      <span class="sr-only">Remove item</span>
      <svg class="cart-item__remove-icon" width="16" height="16" viewBox="0 0 16 16" aria-hidden="true">
        <path d="M14 3h-3.53a3.07 3.07 0 00-.6-1.65C9.44.82 8.8.5 8 .5s-1.44.32-1.87.85A3.06 3.06 0 005.53 3H2a.5.5 0 000 1h1.25v10c0 .28.22.5.5.5h8.5c.28 0 .5-.22.5-.5V4H14a.5.5 0 000-1zM6.91 1.98c.23-.29.51-.48.8-.48s.57.19.8.48c.15.18.25.42.28.52H6.63c.03-.1.13-.34.28-.52zM11.75 4v9.5H4.25V4h7.5z"/>
        <path d="M6.5 5.75c-.14 0-.25.11-.25.25v6c0 .14.11.25.25.25s.25-.11.25-.25V6c0-.14-.11-.25-.25-.25zm3 0c-.14 0-.25.11-.25.25v6c0 .14.11.25.25.25s.25-.11.25-.25V6c0-.14-.11-.25-.25-.25z"/>
      </svg>
    </button>
  </div>
</div>

<style>
.cart-item {
  display: flex;
  gap: 1rem;
  padding: 1rem 0;
  border-bottom: 1px solid #e5e7eb;
  position: relative;
}

.cart-item:last-child {
  border-bottom: none;
}

.cart-item__media {
  flex-shrink: 0;
}

.cart-item__image {
  width: 75px;
  height: 75px;
  object-fit: cover;
  border-radius: 0.375rem;
  border: 1px solid #e5e7eb;
}

.cart-item__image--placeholder {
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f9fafb;
  color: #9ca3af;
}

.cart-item__details {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 0.75rem;
}

.cart-item__info {
  flex: 1;
}

.cart-item__name {
  margin: 0 0 0.25rem 0;
  font-size: 1rem;
  font-weight: 500;
  line-height: 1.4;
}

.cart-item__link {
  color: #111827;
  text-decoration: none;
}

.cart-item__link:hover {
  color: #FF6600;
}

.cart-item__variant {
  font-size: 0.875rem;
  color: #6b7280;
  margin-bottom: 0.5rem;
}

.cart-item__properties {
  margin: 0.75rem 0;
  padding: 0.75rem;
  background: #f9fafb;
  border-radius: 0.375rem;
  border: 1px solid #e5e7eb;
}

.cart-item__properties-list {
  margin: 0;
  display: flex;
  flex-direction: column;
  gap: 0.375rem;
}

.cart-item__property {
  display: flex;
  gap: 0.5rem;
  font-size: 0.875rem;
  align-items: flex-start;
}

.cart-item__property-name {
  font-weight: 500;
  color: #374151;
  min-width: fit-content;
}

.cart-item__property-value {
  color: #6b7280;
  margin: 0;
}

.cart-item__property-file {
  color: #FF6600;
  text-decoration: underline;
}

.cart-item__selling-plan {
  margin: 0.5rem 0;
  padding: 0.5rem;
  background: #ecfdf5;
  border: 1px solid #a7f3d0;
  border-radius: 0.25rem;
}

.cart-item__selling-plan-name {
  margin: 0;
  font-size: 0.875rem;
  color: #065f46;
  font-weight: 500;
}

.cart-item__discounts {
  margin: 0.5rem 0;
}

.cart-item__discount {
  display: inline-flex;
  align-items: center;
  gap: 0.25rem;
  padding: 0.25rem 0.5rem;
  background: #fee2e2;
  color: #991b1b;
  font-size: 0.8125rem;
  border-radius: 0.25rem;
  font-weight: 500;
}

.cart-item__discount-icon {
  font-weight: 700;
}

.cart-item__quantity-price {
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  gap: 1rem;
}

.cart-item__quantity {
  display: flex;
  align-items: center;
  border: 1px solid #d1d5db;
  border-radius: 0.375rem;
  background: white;
}

.cart-item__quantity-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 32px;
  height: 32px;
  border: none;
  background: none;
  color: #6b7280;
  cursor: pointer;
  font-size: 1rem;
  transition: color 0.2s ease;
}

.cart-item__quantity-btn:hover:not(:disabled) {
  color: #FF6600;
}

.cart-item__quantity-btn:disabled {
  color: #d1d5db;
  cursor: not-allowed;
}

.cart-item__quantity-input {
  width: 50px;
  height: 32px;
  border: none;
  text-align: center;
  font-size: 0.875rem;
  background: transparent;
}

.cart-item__quantity-input:focus {
  outline: none;
}

.cart-item__quantity-error {
  position: absolute;
  top: 100%;
  left: 0;
  margin-top: 0.25rem;
  padding: 0.25rem 0.5rem;
  background: #fee2e2;
  color: #991b1b;
  font-size: 0.8125rem;
  border-radius: 0.25rem;
  z-index: 10;
}

.cart-item__price {
  text-align: right;
}

.cart-item__final-price {
  font-size: 1rem;
  font-weight: 600;
  color: #111827;
}

.cart-item__original-price {
  font-size: 0.875rem;
  color: #6b7280;
}

.cart-item__unit-price {
  font-size: 0.8125rem;
  color: #9ca3af;
  margin-top: 0.125rem;
}

.cart-item__remove {
  position: absolute;
  top: 0.5rem;
  right: 0;
  width: 32px;
  height: 32px;
  border: none;
  background: none;
  color: #6b7280;
  cursor: pointer;
  border-radius: 0.25rem;
  transition: color 0.2s ease;
}

.cart-item__remove:hover {
  color: #ef4444;
  background: #fef2f2;
}

.cart-item__remove:focus {
  outline: 2px solid #FF6600;
  outline-offset: 2px;
}

.cart-item__remove-icon {
  width: 16px;
  height: 16px;
}

/* Mobile styles */
@media (max-width: 640px) {
  .cart-item {
    flex-direction: column;
    gap: 0.75rem;
  }
  
  .cart-item__media {
    align-self: center;
  }
  
  .cart-item__quantity-price {
    flex-direction: row;
    align-items: center;
  }
  
  .cart-item__remove {
    position: static;
    align-self: center;
    margin-top: 0.5rem;
  }
  
  .cart-item__properties {
    margin: 0.5rem 0;
    padding: 0.5rem;
  }
}

/* Accessibility improvements */
@media (prefers-reduced-motion: reduce) {
  .cart-item__quantity-btn,
  .cart-item__remove {
    transition: none;
  }
}

@media (prefers-contrast: high) {
  .cart-item {
    border-bottom-width: 2px;
  }
  
  .cart-item__properties {
    border-width: 2px;
  }
}
</style>
